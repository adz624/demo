<h1>index page</h1>

<%= link_to "新增",new_group_path%>
<table class="table">
<tr>
	<td>Title</td>
	<td>Description</td>
	<td>Action</td>
</tr>

<%@group.each do |group|%>
	<tr>
	<td><%=group.title%> </td>
	<td><%=group[:description]%></td>
	<td>
    <!-- Info Link -->
    <%= link_to "Info訊息", info_group_path(group), class: 'btn btn-primary' %>
		<!-- Show Link -->
		<%= link_to "show1", group_path(group), class: 'btn btn-info' %>
		<%= link_to "show2", group_path(group.id), class: 'btn btn-info' %>
		<%= link_to "show3", group, class: 'btn btn-info' %>

		<!-- Edit Link -->
		<%= link_to "修改1", edit_group_path(group), class: 'btn btn-warning' %>

		<%= link_to "修改2", edit_group_path(group.id), class: 'btn btn-warning' %>

		<!-- Delete Link -->
		<%= link_to "刪除", group_path(group.id), :method => 'delete', :confirm => 'are you sure!', class: 'btn btn-danger' %>
	</td>
</tr>

<%end%>

</table>